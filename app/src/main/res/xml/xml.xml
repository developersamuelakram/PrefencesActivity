<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">


    <PreferenceCategory android:title="Appearance">


        <SwitchPreference
            android:defaultValue="false"
            android:key="dark_mode"
            android:summary="Enable Dark Mode for reducing eye strain"
            android:title="Dark Mode" />


        <SwitchPreference
            android:defaultValue="false"
            android:key="orientation_landscape"
            android:textStyle="bold"
            android:summary="Enable Landscape for wide viewing"
            android:title="Enable Landscape Mode" />


    </PreferenceCategory>

    <PreferenceCategory android:title="Personal Info">

        <EditTextPreference

            android:key="status"
            android:defaultValue=" "
            android:dialogTitle="Status"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Enter Mood"
            android:dialogMessage="How are you feeling"
            android:inputType="textCapWords"
            android:text="Set your mood"/>


    </PreferenceCategory>





</PreferenceScreen>